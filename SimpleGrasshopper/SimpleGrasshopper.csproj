<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Title>Simple Grasshopper</Title>
	<Description>A repo to simplify your plugin development in Grasshopper.</Description>
	<PackageReadmeFile>README.md</PackageReadmeFile>
	<RepositoryUrl>https://github.com/ArchiDog1998/SimpleGrasshopper</RepositoryUrl>
	<PackageLicenseExpression>LGPL-3.0-or-later</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grasshopper" Version="8.0.23304.9001" />
	  <Using Include="Grasshopper" />
	  <Using Include="Grasshopper.Kernel" />
    <Using Include="System.Reflection" />
	<PackageReference Include="System.Drawing.Common" Version="8.0.0" />
	  
	<Content Include="..\SimpleGrasshopper.SourceGenerators\bin\$(Configuration)\netstandard2.0\SimpleGrasshopper.SourceGenerators.dll">
		<Pack>true</Pack>
		<PackagePath>lib\$(TargetFramework)</PackagePath>
	</Content>
	  
	<None Include="..\README.md">
	  <Pack>True</Pack>
	  <PackagePath>\</PackagePath>
	</None>
  </ItemGroup>
	
</Project>
