<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
	<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	<Title>Simple Grasshopper</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grasshopper" Version="8.0.23304.9001" />
	  <Using Include="Grasshopper" />
	  <Using Include="Grasshopper.Kernel" />
    <Using Include="System.Reflection" />
	<PackageReference Include="System.Drawing.Common" Version="8.0.0" />
	  
	<Content Include="..\SimpleGrasshopper.SourceGenerators\bin\$(Configuration)\netstandard2.0\SimpleGrasshopper.SourceGenerators.dll">
		<Pack>true</Pack>
		<PackagePath>lib\$(TargetFramework)</PackagePath>
	</Content>
	<ProjectReference Include="..\SimpleGrasshopper.SourceGenerators\SimpleGrasshopper.SourceGenerators.csproj" />
  </ItemGroup>
	
</Project>
